{
  "compilerOptions": {
    "target": "ES2016",                       
    "module": "commonjs",                     
    "sourceMap": true,                        
    "outDir": "./dist",                       
    "removeComments": true,                   
    "strict": true,                           
    "baseUrl": "./",                          
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,           
    "emitDecoratorMetadata": true,            
    "forceConsistentCasingInFileNames": true  
  },
}
